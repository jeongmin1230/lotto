<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="번호 갤러리에 저장"
        android:fontFamily="@font/swagger"
        android:backgroundTint="#706E6E"
        android:id="@+id/btnCapture"
        android:onClick="onClickCapture"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnCapture"
        android:background="@color/white"
        android:layout_margin="20dp"
        android:id="@+id/rlCaptureLayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/swagger"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="「절반의 행운, 절반의 기부」"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="72dp"
                    android:src="@drawable/pocket" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/swagger"
                    android:textColor="@color/black"
                    android:text="나눔\nLotto 6/45"
                    android:textSize="25dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swagger"
                android:textColor="@color/black"
                android:text="제 _ _ 회"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvPublishedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swagger"
                android:textColor="@color/black"
                android:text="발 행 일 : 연도/월/일 (요일) 시 : 분 : 초\n"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lotteryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swagger"
                android:textColor="@color/black"
                android:text="추 첨 일 : 연도/월/일 (요일) TR(발권기록)\n"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvPaymentDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swagger"
                android:textColor="@color/black"
                android:text="지급기한 : 연도/월/일\n"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fce4ec"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvNumberArray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swagger"
                    android:textColor="@color/black"
                    android:text=""
                    android:textSize="30dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swagger"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="정 민 복 권"
                android:textSize="60dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>